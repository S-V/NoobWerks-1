
; render state: no face culling, no depth testing, alpha-blending
rasterizer = 	{
	name = 'Solid_CullBack_NoClip'
	fill_mode	= 'Solid'
	cull_mode 	= 'Back'
	flags = ()
}

depth_stencil = 	{
	flags = (
		'Enable_DepthTest'
	)

	;comparison_function = 'Less_Equal'
	; Reverse Z:
	comparison_function = 'Greater_Equal'
}

blend = {
	; no blending
}
